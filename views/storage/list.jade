extends ../layout_nomenu

block append css

block content
    .main-content
        #breadcrumbs.breadcrumbs
            script(type='text/javascript').
                try {
                    ace.settings.check('breadcrumbs', 'fixed')
                } catch (e) {
                }
            ul.breadcrumb
                li
                    i.icon-home.home-icon
                    a(href='#') Home
                li
                    a(href='#') Tables
                li.active jqGrid plugin
            // .breadcrumb
            #nav-search.nav-search
                form.form-search
                    span.input-icon
                        input#nav-search-input.nav-search-input(type='text', placeholder='Search ...', autocomplete='off')
                        i.icon-search.nav-search-icon
            // #nav-search
        .page-content
            .page-header
            // /.page-header
            .row
                .col-xs-12
                    // PAGE CONTENT BEGINS
                    form#search-form-id
                        table.searchTable
                            tr
                                td
                                    | 商品名称：
                                td
                                    input.col-xs-10.col-sm-5(type='text' , name='goodsName', placeholder='')
                                td
                                    | 商品进价：
                                td
                                    input.col-xs-10.col-sm-5(type='number' , name='bid', placeholder='')
                            tr
                                td
                                    | 采购人员：
                                td
                                    input.col-xs-10.col-sm-5(type='text' , name='buyer', placeholder='')
                                td
                                td
                                    button.btn.btn-info.btn-sm(type='submit',style="border-width:3px;")
                                        i.icon-ok.bigger-110
                                        |                                     搜索
                                    button.btn.btn-sm(type='reset')
                                        i.icon-undo.bigger-110
                                        |                                     重置
                    button#btn-add-category-id.btn.btn-info.btn-sm(onclick="addStorageInfo(this)",style="margin-bottom:5px;width:180px;")
                        i.icon-plus.bigger-110
                        |                                     商品入库
                    table#grid-table
                    #grid-pager
                    script(type='text/javascript').
                        var $path_base = "/";

    style.
    script(type='text/javascript',src="javascripts/storage/list.js")
    script(type='text/javascript',src="//cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.0/jquery-ui.js")
    script(type="text/javascript") storagePageInit();
